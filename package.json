{
  "name": "agentic-world",
  "version": "1.0.0",
  "private": true,
  "description": "AI agents with persistent memories navigating economic inequality through MCP servers.",
  "author": "KBB99",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/KBB99/agentic-world.git"
  },
  "homepage": "https://github.com/KBB99/agentic-world#readme",
  "bugs": {
    "url": "https://github.com/KBB99/agentic-world/issues"
  },
  "main": "simulate-agent-actions.js",
  "directories": {
    "doc": "docs"
  },
  "workspaces": [
    "mcp-bridge",
    "web-interface"
  ],
  "scripts": {
    "start": "node server/control-server.js",
    "start:control": "node server/control-server.js",
    "lint": "eslint . --ext .js,.mjs,.cjs --max-warnings 0",
    "lint:fix": "eslint . --ext .js,.mjs,.cjs --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "check": "npm run lint && npm run format:check",
    "py:lint": "ruff check .",
    "py:format": "black .",
    "py:check": "ruff check . && black --check ."
  },
  "keywords": [
    "MCP",
    "AI",
    "agents",
    "AWS",
    "WebSocket",
    "simulation"
  ],
  "engines": {
    "node": ">=18"
  },
  "dependencies": {
    "@modelcontextprotocol/sdk": "^1.17.2",
    "@modelcontextprotocol/server-brave-search": "^0.6.2",
    "@modelcontextprotocol/server-filesystem": "^2025.8.21"
  },
  "devDependencies": {
    "eslint": "^9.11.1",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-import": "^2.29.1",
    "prettier": "^3.3.3"
  }
}
